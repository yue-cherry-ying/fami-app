<div>
  <div>
    <h1>
      List of all services
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new service
    </h2>

    <form action="/insert_service" method="post">
      <div>
        <label for="service_name_box">
          Service name
        </label>

        <input type="text" id="service_name_box" name="query_service_name">
      </div>

      <div>
        <label for="category_box">
          Category
        </label>

        <input type="text" id="category_box" name="query_category">
      </div>

      <div>
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="receiver_id_box">
          Receiver
        </label>

        <input type="text" id="receiver_id_box" name="query_receiver_id">
      </div>

      <div>
        <label for="coupon_id_box">
          Coupon
        </label>

        <input type="text" id="coupon_id_box" name="query_coupon_id">
      </div>

      <button>
        Create service
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Service name
        </th>

        <th>
          Category
        </th>

        <th>
          Date
        </th>

        <th>
          Image
        </th>

        <th>
          Receiver
        </th>

        <th>
          Coupon
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_services.each do |a_service| %>
      <tr>
        <td>
          <%= a_service.id %>
        </td>

        <td>
          <%= a_service.service_name %>
        </td>

        <td>
          <%= a_service.category %>
        </td>

        <td>
          <%= a_service.date %>
        </td>

        <td>
          <%= a_service.image %>
        </td>

        <td>
          <%= a_service.receiver_id %>
        </td>

        <td>
          <%= a_service.coupon_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_service.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_service.updated_at) %> ago
        </td>

        <td>
          <a href="/services/<%= a_service.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
