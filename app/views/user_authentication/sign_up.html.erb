<div class="card" style="
  width: 28rem; 
  display: block;
  margin-top: 10px;
  margin-left: auto;
  margin-right: auto;">
  <div class="card-body">
    <h1 class="card-title" style="font-family: 'Architects Daughter', cursive;">SIGN UP</h1>
    <form action="/insert_user" method="post">
      <div class="card-text form-group">
        <label for="email_box">Email</label>
        <input class="form-control" id="email_box" name="query_email" placeholder="Choose a email..." type="text">
      </div>
                    
      <div class="card-text form-group">
        <label for="first_name_box">First name</label>
        <input class="form-control" type="text" id="first_name_box" name="query_first_name">
      </div>
            
      <div class="card-text form-group">
        <label for="last_name_box">Last name</label>
        <input class="form-control" type="text" id="last_name_box" name="query_last_name">
      </div>
            
      <div class="card-text form-group">
        <label for="profile_image_box">Profile image</label>
        <input class="form-control" type="text" id="profile_image_box" name="query_profile_image" placeholder="Enter a URL for the image...">
      </div>
            
      <div class="card-text form-group"> 
        <label for="bio_box">Bio</label>
        <textarea class="form-control" id="bio_box" name="query_bio" placeholder="Enter one or two short sentences that represent or inspire you..." rows="3"></textarea>
      </div>
        
      <div class="card-text form-group">
        <label for="password_box">Password</label>
        <input class="form-control" id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>

      <div class="card-text form-group">
        <label for="password_confirmation_box">Password Confirmation</label>
        <input class="form-control" id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button class="form-group">
        Sign up
      </button>
    </form>

    <hr>

    <p style="font-family: 'Architects Daughter', cursive;">
      Or, <a href="/user_sign_in">SIGN IN</a> instead.
    </p>

  </div>
</div>

