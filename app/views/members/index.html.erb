<div>
  <div>
    <h1>
      List of all members
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new member
    </h2>

    <form action="/insert_member" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="profile_image_box">
          Profile image
        </label>

        <input type="text" id="profile_image_box" name="query_profile_image">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <textarea id="bio_box" name="query_bio" rows="3"></textarea>
      </div>

      <button>
        Create member
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Profile image
        </th>

        <th>
          Bio
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_members.each do |a_member| %>
      <tr>
        <td>
          <%= a_member.id %>
        </td>

        <td>
          <%= a_member.name %>
        </td>

        <td>
          <%= a_member.profile_image %>
        </td>

        <td>
          <%= a_member.bio %>
        </td>

        <td>
          <%= time_ago_in_words(a_member.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_member.updated_at) %> ago
        </td>

        <td>
          <a href="/members/<%= a_member.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
