<div>
  <div>
    <h1>
      Profile for <%= @the_member.name %>
    </h1>

    <div>
      <div>
        <a href="/members" class="btn btn-block btn-outline-secondary">
          Go back
        </a>

        &nbsp;|&nbsp;
        
        <a href="/delete_member/<%= @the_member.id %>" class="btn btn-block btn-outline-secondary">
          Delete member
        </a>
      </div>

      
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_member.name %>
      </dd>

      <dt>
        Profile image
      </dt>
      <dd>
        <img src=<%= @the_member.profile_image %> style="width:250px;">
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_member.bio %>
      </dd>

    </dl>
  </div>
</div>

<hr>

<h2>Coupons</h2>

<table border="1">
  <tr>
    <th>
      Coupon Content
    </th>

    <th>
      Giver Name
    </th>

    <th>
      Expiration Date
    </th>
  </tr>

  <% @the_member.characters.each do |a_character| %>
    <tr>
      <td>
        <%= a_character.movie.title %>
      </td>

      <td>
        <%= a_character.movie.year %>
      </td>

      <td>
        <%= a_character.movie.director.name %>
      </td>

      <td>
        <%= a_character.name %>
      </td>

      <td>
        <a href="/movies/<%= a_character.movie.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>

<div>
  <div>
    <h2>
      Edit member
    </h2>

    <form action="/modify_member/<%= @the_member.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_member.name %>">
      </div>

      <div>
        <label for="profile_image_box">
          Profile image
        </label>

        <input type="text" id="profile_image_box" name="query_profile_image" value="<%= @the_member.profile_image %>">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <textarea id="bio_box" name="query_bio"><%= @the_member.bio %></textarea>
      </div>

      <button>
        Update member
      </button>
    </form>
  </div>
</div>

<hr>
